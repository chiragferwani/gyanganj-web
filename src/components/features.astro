---
import Link from "@components/ui/link.astro";
import { localizePath } from "astro-i18next";
// @ts-ignore
import { Icon } from "astro-icon/components";
import { t } from "i18next";

const features = [
	{
		title: "Article Scrolling",
		description: "features.astro",
		icon: "bx:bxs-party",
		url: "https://astro.build/",
	},
	{
		title: "Search System",
		description: "features.alpine",
		icon: "bx:bxs-file-find",
		url: "https://alpinejs.dev/",
	},
	{
		title: "Trending Reads",
		description: "features.tailwind",
		icon: "bx:bxs-book-reader",
		url: "https://tailwindcss.com/",
	},
	{
		title: "TTS Integration",
		description: "features.localization",
		icon: "bx:bxs-bot",
		url: "https://github.com/yassinedoghri/astro-i18next",
	},
	{
		title: "Bookmark & Save",
		description: "features.light_dark_mode",
		icon: "bx:bxs-bookmarks",
		url: "https://tailwindcss.com/docs/dark-mode",
	},
	{
		title: "Article Sharing",
		description: "features.giscus",
		icon: "bx:bxs-share-alt",
		url: "https://giscus.app/",
	},
	{
		title: "Engagement Tracking",
		description: "features.decapcms",
		icon: "bx:bxs-bug",
		url: "https://decapcms.org/",
	},
	{
		title: "Community Groups (soon)",
		description: "features.rss",
		icon: "bx:bxs-group",
		url: "/rss.xml",
	},
	{
		title: "AI Recommendations (soon)",
		description: "features.articlegenerator",
		icon: "bx:bxs-brain",
		url: "#",
	},
];
---

<div class="relative mx-auto max-w-5xl px-6 lg:px-8">
	<div class="mx-auto max-w-2xl lg:text-center">
		<h2 class="text-base font-semibold leading-7 text-black dark:text-white">{t("features.title")}</h2>
		<p class="mt-2 text-3xl font-bold tracking-tight text-black dark:text-white sm:text-4xl">{t("features.subtitle")}</p>
		<p class="mt-6 text-lg leading-8 text-gray-900 dark:text-gray-100">
			{t("features.description")}
		</p>
	</div>
	<div class="mx-auto mt-16 max-w-2xl sm:mt-20 lg:mt-24 lg:max-w-none">
		<dl class="grid max-w-xl grid-cols-1 gap-x-8 gap-y-16 lg:max-w-none lg:grid-cols-3">
			{
				features.map((item) => (
					<div class="flex flex-col">
						<dt class="flex items-center gap-x-3 text-base font-semibold leading-7 text-black dark:text-white">
							<div class="h-5 w-5 flex-none text-black dark:text-white">
								<Icon name={item.icon} />
							</div>
							{item.title}
						</dt>
						<dd class="mt-4 flex flex-auto flex-col text-base leading-7 text-gray-900 dark:text-gray-100">
							<p class="flex-auto text-justify">{t(item.description)}</p>
							
						</dd>
					</div>
				))
			}
		</dl>
	</div>
</div>
